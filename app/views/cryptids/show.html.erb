
<div class="parent">


<div class='div1'>
    <h1> <%= @cryptid.name %> </h1>
    <br>
    <%= @cryptid.description %>
</div>




<div class='div2'></div><h4>Recent Sightings</h4>

    <ul class='no-bullets'>
        <% @cryptid.sightings.each do |sighting| %>
        <li>Date: <%= sighting.date %></li>
        <ul>
            <li>Location: <%= sighting.location%></li>
            <li>Temperament: <%= sighting.creature_temperament %></li>
            <li>Fear Instilled: <%= sighting.fear_rating %> out of 10</li>
        </ul>
    <% end %>
</ul>

</div>


<div class='div3'>
<%= image_tag @cryptid.img_url %>
</div>
</div>





